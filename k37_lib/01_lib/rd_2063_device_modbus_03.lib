int rd_device_modbus_03( char port )
{
	static int status;
   auto struct tm comTime;
   auto union uf f;//uf这在K36的驱动库里已定义

   costate
   {
   	status = 0;
      pack_modbus_cmd(0x03, 0x03, 0x00, 0x02);
      com_write(port);
      waitfor(DelayMs(2000));

      memset(com_rbuf, 0x00, sizeof(com_rbuf));
      com_read(port);
		if( (com_rlen >= 9)&&(com_rbuf[0] == 0x03)&&(com_rbuf[1] == 0x03) )
      {
			f.ch[1] = com_rbuf[3];
	      f.ch[0] = com_rbuf[4];
	      f.ch[3] = com_rbuf[5];
	      f.ch[2] = com_rbuf[6];
			com_f[0] = f.f;			//即时值
         com_sec = read_rtc();
         status = 1;
      }
      else
      {
         status = 2;
         com_f[0] = 0.0;
         com_sec = read_rtc();
      }
   }
   return status;
}









